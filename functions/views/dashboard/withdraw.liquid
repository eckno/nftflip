{% include 'dashboard/partials/header.liquid' %}
{% include 'dashboard/partials/sidebar.liquid' %}

    <div class="content-body">
        <div class="container">
            <div class="page-title">
                <div class="row align-items-center justify-content-between">
                    <div class="col-6">
                        <div class="page-title-content">
                            <h3>Request Withdrawal</h3>
                            <p class="mb-2">Hello {{loggedUser.fname}}, You can now fill the input below to request withdrawal</p>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="breadcrumbs"><a href="#">Settings </a><span><i
                                    class="ri-arrow-right-s-line"></i></span><a href="#">withdraw funds</a></div>
                    </div>
                </div>
            </div>
           
            <div class="row">
        
                <div class="col-xxl-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Ethereum Withdrawal Form <span class="text-warning">(Available: {{loggedUser.totalBalance}}ETH)</span></h4>
                        </div>
                        <div class="card-body">
                            <form action="#" id="profitForm">
                                <div class="row">
                                    <div class="col-xxl-6 col-xl-6 col-lg-6 mb-3">
                                        <label class="form-label">Enter Amount In Eth (e.g, 0.5, 0.8, 1, 10, 20, 25.8):-</label>
                                            <input name="amount" id="amount" type="int" class="form-control" required placeholder="how many unit of ethereum">
                                    </div>
                                    <div class="col-xxl-6 col-xl-6 col-lg-6 mb-3">
                                        <label class="form-label">Additional Message (optional):-</label>
                                            <textarea name="desc" id="desc" class="form-control" placeholder="have any description ?"></textarea>
                                    </div>
                                      
                                </div>
                                <div class="row">
                                    <div class="col-xxl-6 col-xl-6 col-lg-6 mb-3">
                                        <label class="form-label">Ethereum Wallet:-</label>
                                            <input name="wallet" id="wallet" type="text" class="form-control" required placeholder="Paste your ethereum wallet address to receive funds">
                                    </div>
                                </div>
                                <div class="mt-3"><button id="profileFormBtn" type="submit" class="btn btn-primary mr-2"> Withdraw</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {% include 'dashboard/partials/footer.liquid' %}