{% include 'dashboard/partials/header.liquid' %}
{% include 'dashboard/partials/sidebar.liquid' %}

    <div class="content-body">
        <div class="container">
            <div class="page-title">
                <div class="row align-items-center justify-content-between">
                    <div class="col-6">
                        <div class="page-title-content">
                            <h3>Add Funds</h3>
                            <p class="mb-2">Hello {{loggedUser.fname}}, Fill the form below to add money to your account</p>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="breadcrumbs"><a href="#">Settings </a><span><i
                                    class="ri-arrow-right-s-line"></i></span><a href="#">Add funds</a></div>
                    </div>
                </div>
            </div>
           
            <div class="row">
        
                <div class="col-xxl-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Ethereum Deposit Form</h4>
                        </div>
                        <div class="card-body">
                            <form action="#" id="profileForm">
                                <div class="row">
                                    <div class="col-xxl-6 col-xl-6 col-lg-6 mb-3">
                                        <label class="form-label">Amount:-</label>
                                            <input name="amount" id="amount" type="int" class="form-control" required placeholder="how many unit of ethereum">
                                        </div>
                                    <div class="col-xxl-6 col-xl-6 col-lg-6 mb-3">
                                        <label class="form-label">Description:-</label>
                                            <textarea name="desc" id="desc" class="form-control" placeholder="deposit description">
                                                </textarea>
                                    </div>
                                      
                                </div>
                                <div class="mt-3"><button id="profileFormBtn" type="submit" class="btn btn-primary mr-2"> Add Funds</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    {% include 'dashboard/partials/footer.liquid' %}