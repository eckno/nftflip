{% include 'dashboard/partials/header.liquid' %}
<style>
    .badge {
    display: inline-block;
    padding: 0.25em 0.4em;
    font-size: 75%;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    white-space: nowrap;
    vertical-align: baseline;
    border-radius: 0.25rem;
}

.badge-danger {
    color: #fff;
    background-color: #dc3545;
}

.badge-success {
    color: #fff;
    background-color: #28a745;
}

.badge-info {
    color: #fff;
    background-color: #17a2b8;
}
</style>
{% include 'dashboard/partials/sidebar.liquid' %}

    <div class="content-body">
        <div class="container">
            <div class="page-title">
                <div class="row align-items-center justify-content-between">
                    <div class="col-6">
                        <div class="page-title-content">
                            <h3>Profile</h3>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="breadcrumbs"><a href="#">Home </a><span><i
                                    class="ri-arrow-right-s-line"></i></span><a href="#">Profile</a></div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xxl-12 col-xl-12">
                    <div class="card welcome-profile">
                        <div class="card-body"><img src="images/avatar/1.jpg" alt="">
                            <h4>Welcome, {{loggedUser.fname}}!</h4>
                            <p>Looks like you are not 100% verified yet. Verify yourself to use the full potential of
                                Xtrader.</p>
                            <ul>
                                {% if loggedUser.emailValidated == true %}
                                <li>
                                    <a href="javascript:void(0)"><span class="verified"><i class="ri-check-line"></i></span>
                                        Verify account
                                    </a>
                                </li>
                                {% endif %}
                                <li>
                                    <a href="#"><span class="not-verified">
                                        <i class="ri-shield-check-line"></i></span>
                                        Two-factor authentication (2FA)
                                    </a>
                                </li>
                                <li>
                                    <a href="#"><span class="not-verified">
                                        <i class="ri-shield-check-line"></i></span>
                                        Identity Verification
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">My Collection</h4>
                        </div>
                        <div class="card-body bs-0 p-0 bg-transparent">
                            <div class="row">
                                {% if bids %}
                                {% for bid in bids %}
                                <div class="col-xxl-3 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                                    <div class="card items">
                                        <div class="card-body">
                                            <div class="items-img position-relative"><img src="{{bid.nftUrl}}"
                                                    class="img-fluid rounded mb-3" alt=""><img
                                                    src="{{bid.nftUrl}}" class="creator" width="50" alt=""></div>
                                            <h4 class="card-title">{{bid.nftName}}</h4> 
                                            {% if bid.iscompleted == "yes" %}
                                            <span class="badge badge-danger p-2">Sold Out</span>
                                            {% endif %}
                                            {% if bid.iscompleted == false %}
                                            <span class="badge badge-info p-2">Autioning</span>
                                            {% endif %}
                                            {% if bid.iscompleted == true %}
                                            <span class="badge badge-success p-2">Owned</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                               {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>


    {% include 'dashboard/partials/footer.liquid' %}